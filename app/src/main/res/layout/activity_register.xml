                <!--// 注意invisible和gone的区别-->
                <Spinner
                    android:id="@+id/s_croptype3"
                    android:layout_width="145dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:entries="@array/shuidaotype" />

                <Spinner
                    android:id="@+id/s_cropname3"
                    android:layout_width="145dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:entries="@array/shuidaotype" />

                <EditText
                    android:id="@+id/et_croparea3"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
