<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.activity.zhengce.PolicyfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="49dp"
            android:layout_height="47dp"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/top_bar_left_back" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="50dp"
            android:text="政策文件"
            android:textColor="#464646"
            android:textSize="20sp" />


        <ImageButton
            android:id="@+id/ib_policyfile_downloaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/policyfile_downloaded"
            />
    </LinearLayout>

    <GridView
        android:id="@+id/gv_policyfile"
        android:layout_width="match_parent"
        android:numColumns="1"
        android:layout_height="match_parent" />
</LinearLayout>